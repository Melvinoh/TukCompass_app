<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.TukCompass" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- App brand colors -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- EditText hint and cursor -->
        <item name="android:textCursorDrawable">@null</item> <!-- makes cursor follow textColor -->
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- TabLayout text -->
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@color/green</item>

    </style>

    <style name="Theme.TukCompass" parent="Base.Theme.TukCompass" />
</resources>
